<div class="admin-inner-content">
  <div class="admin-inner-content-title">Edit Product</div>
  <div class="admin-inner-content-info">
    <%= raw msg_flash(flash) %>
    <%= form_for([:admin, @product],
                  :html => { :multipart => true, :method => :put }) do |f| %>
      <%= f.error_messages %>
      <div style="height: 225px;">
        <%#= image_tag @product.primary_image("medium") %>
        <%= image_tag @product.image.url("medium") %>
      </div><br /><br />
      <%= render :partial => 'form', :locals => { :f => f} %>
      <div class="field">
        <%= f.submit 'Update Product' %>&nbsp;&nbsp;
        <%= link_to 'Back', admin_products_path %>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
</div>

