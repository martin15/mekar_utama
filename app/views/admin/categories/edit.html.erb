<div class="admin-inner-content">
  <div class="admin-inner-content-title">Edit Category</div>
  <div class="admin-inner-content-info">
    <%= raw msg_flash(flash) %>
    <%= form_for([:admin, @category], :url => admin_category_path,
                  :html => { :multipart => true, :method => :put }) do |f| %>
      <%= f.error_messages %>
      <%= render :partial => 'form', :locals => { :f => f} %>
      <div class="field">
        <%= f.submit 'Update Category' %>&nbsp;&nbsp;
        <%= link_to 'Back', admin_categories_path %>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
</div>

